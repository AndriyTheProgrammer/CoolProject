
<% if user_signed_in? %>
    <%= form_for :book do |f| %>
        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :author %><br />
          <%= f.text_field :author, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_field :description, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :book_text %><br />
          <%= f.text_area :book_text, autofocus: true %>
        </div>
        <%= f.submit 'Add new book'%>
        <% end %>
<% else %>
    <h1>
      Fuck out to login page! You must be logged to read this book
      <%= link_to('Login', new_user_session_path)  %>
    </h1>
<% end %>